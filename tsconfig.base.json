{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ballware/angular-utils": ["libs/angular-utils/src/index.ts"],
      "@ballware/builder-models": ["libs/builder-models/src/index.ts"],
      "@ballware/builder-services": ["libs/builder-services/src/index.ts"],
      "@ballware/common-services": ["libs/common-services/src/index.ts"],
      "@ballware/dx-builder": ["libs/dx-builder/src/index.ts"],
      "@ballware/dx-commons": ["libs/dx-commons/src/index.ts"],
      "@ballware/dx-renderer": ["libs/dx-renderer/src/index.ts"],
      "@ballware/meta-api": ["libs/meta-api/src/index.ts"],
      "@ballware/meta-model": ["libs/meta-model/src/index.ts"],
      "@ballware/meta-services": ["libs/meta-services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
